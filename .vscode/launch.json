    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 8000, 
            "pathMappings": {
                "~/Documents/IPP": "${workspaceFolder}/",
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "pathMappings": {
                "~/Documents/IPP": "${workspaceFolder}/",
            }
        },

        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args" : ["--input=tmp.out"],
            "console": "integratedTerminal"
        },
    ]
}